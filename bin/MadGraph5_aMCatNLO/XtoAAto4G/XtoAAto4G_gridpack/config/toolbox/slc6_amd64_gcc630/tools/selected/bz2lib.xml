<tool name="bz2lib" version="1.0.6">
  <info url="http://sources.redhat.com/bzip2/"/>
  <lib name="bz2"/>
  <client>
    <environment name="BZ2LIB_BASE" default="/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/bz2lib/1.0.6"/>
    <environment name="LIBDIR"       default="$BZ2LIB_BASE/lib"/>
    <environment name="INCLUDE"      default="$BZ2LIB_BASE/include"/>
  </client>
  <runtime name="ROOT_INCLUDE_PATH" value="$INCLUDE" type="path"/>
  <use name="root_cxxdefaults"/>
</tool>

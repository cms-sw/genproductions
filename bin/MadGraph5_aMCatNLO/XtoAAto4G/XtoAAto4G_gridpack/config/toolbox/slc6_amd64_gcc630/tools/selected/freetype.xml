<tool name="freetype" version="2.5.3-oenich">
  <lib name="freetype-cms"/>
  <client>
    <environment name="FREETYPE_BASE" default="/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/freetype/2.5.3-oenich"/>
    <environment name="INCLUDE"      default="$FREETYPE_BASE/include"/>
    <environment name="LIBDIR"       default="$FREETYPE_BASE/lib"/>
